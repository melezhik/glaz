<table class="table-bordered table-striped table">
    <tr>
        <th colspan=2>
            Report Images
        </th>
    </tr>
    <tr>
        <th>
            ID
        </th>
        <th>
            Report Title
        </th>
    </tr>
    <tr>
        <td><%= @report.id %></td>
        <td><%= @report.title %></td>
    </tr>
    
</table>

<p><%= link_to 'back to report', report_path(@report)  %></p>

<table class="table-bordered table-striped table">
    <% if @report.has_images? %>
    <tr>
        <th>ID</th>
        <th>Date</th>
        <th colspan=3>Actions</th>
    </tr>
    <% @images.each do |item| %>
    <tr>
        <td><%= item.id %></td>
        <td><%= item.created_at.strftime('%B %d, %Y at %H:%M') %></td>
        <td>
            <%= link_to 'image stat', stat_report_image_path(@report, item), :title => 'see image stat'  %>
        </td>
        <td><%= link_to 'image report', report_image_path(@report, item), :title => 'see image report'  %></td>
        <td>
            <%= link_to 'delete image', report_image_path(@report, item), :method => :delete %>
        </td>
    </tr>
    <% end %>
    <% else %>
    <tr>
        <td colspan=3> no images found </td>
    <tr>
    <% end %>
</table>

<%= form_for :metric, url: metrics_path  do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, :size => 100 %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :size => 100 %>
  </p>
  <p>
    <%= f.label :command %><br>
    <%= f.text_field :command, :size => 100 %>
  </p>
  <%= f.select :command_type, options_for_select(['ssh', 'shell' ]),  {} %>
  <p>
    <%= f.label :default_value %><br>
    <%= f.text_field :default_value, :size => 100 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


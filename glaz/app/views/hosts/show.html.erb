<table class="table-striped table-bordered table">
<tr>
    <th colspan=3>Host summary</th>
</tr>
<tr>
    <th>Fqdn</th>
    <th>Title</th>
    <th>Enabled</th>
</tr>

<tr>
    <td><%= @host.fqdn %></td>
    <td><%= @host.title %></td>
    <td><%= @host.enabled %></td>
</tr>
</table>

<table class="table-striped table-bordered table">
<tr>
    <th>Actions</th>
</tr>
<tr>
  <td>  <%= link_to 'edit host', edit_host_path(@host), :title => 'edit host attributes' %> | 
        <%= link_to 'add metric to host', add_metric_form_host_path(@host), :title => 'add metric to host' %> | 
        <%= link_to 'delete host', host_path(@host), :method => :DELETE, :title => 'delete this host' %> 
  </td>
</tr>
</table>

<table class="table-bordered table-striped table">
<tr>
    <th colspan=3>Available Metrics</th>
</tr>
<% if @host.has_metrics? %>
<tr>
    <th>Name</th>
    <th>Enabled</th>
    <th>Actions</th>
</tr>
<% @host.metrics.each do |m| %>
    <% task = @host.task(m.id) %>
    <tr>
        <td> 
            <%= link_to  m.title, metric_path(m), :title => 'show metric data'  %>
        </td>
        <td>
            <%= task.enabled %>
        </td>
        <td>
            <%= link_to 'remove', task_path(task), :method => :delete, :title => 'remove this metric from host' %> |
            <% if task.enabled? %>
                <%= link_to 'disable', disable_task_path(task), :method => :post, :title => 'remove this metric from synchronazation' %> 
            <% else %>
                <%= link_to 'enable', enable_task_path(task), :method => :post, :title => 'add this metric to synchronazation' %> 
            <% end %>
        </td>
    </tr>
<% end %>
</table>
<% else %>
    <tr>
        <td colspan=2>0 metrics found</td>
    </tr>
<% end %>


 <script>
    var source = new EventSource('/reports/<%= @schema[:report][:report_id] %>/stat/?image_id=<%= @schema[:report][:image_id] %>');
    source.addEventListener('stat', function(e) {
      var data = JSON.parse(e.data);
      document.getElementById(data.stat_id).innerHTML = data.value;
      // alert(data.value)
    }, false);

  </script>

<ul>
<% @schema[:schema].each do |h| %>
    <ol>
     <% h[:metrics].each do |m| %> 
     <%= h[:fqdn] %> , <%= m[:name] %><pre id="<%= m[:stat_id] %>"></pre><br>


    <% end %>
    </ol>
<% end %>
</ul>
